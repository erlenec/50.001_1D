<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f1f0"
    tools:context=".PostActivity">
    <TextView
        android:id="@+id/TOPIC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/open_sans"
        android:textSize="30sp"
        android:text="Post an Item"
        android:textColor="@color/orange_peel"
        android:background="@color/light_cyan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/itemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:fontFamily="@font/open_sans"
        android:textSize="24sp"
        android:text="Item Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/edititemText"
        android:hint="Enter item name here"
        android:background="@color/white"
        android:gravity="left"
        android:fontFamily="@font/open_sans"
        android:inputType= "textAutoCorrect"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/DateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Date Founded or Losted"
        android:fontFamily="@font/open_sans"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/editDateText"
        android:hint="Enter date here"
        android:gravity="left"
        android:inputType= "date"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/InfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Extra Info"
        android:fontFamily="@font/open_sans"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/editInfoText"
        android:hint="Enter extra infomation here"
        android:background="@color/white"
        android:gravity="left"
        android:inputType= "textAutoCorrect"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <EditText
        android:id="@+id/SPACE10"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@color/transparent"
        android:gravity="left"
        android:inputType="textAutoCorrect" />

    <Button
        android:id="@+id/PostButton2"
        android:layout_width="57dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:background="@drawable/right_arrow"
        android:text="" />


</LinearLayout>